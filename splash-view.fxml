<VBox prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SplashController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <HBox prefWidth="400.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="250.0" spacing="10.0">
               <children>
                  <Text fill="#494949" strokeType="OUTSIDE" strokeWidth="0.0" text="Tanker " textAlignment="CENTER">
                     <font>
                        <Font size="31.0" />
                     </font></Text>
                  <ComboBox fx:id="tankerComboBox" prefWidth="150.0" />
                  <ImageView fx:id="tankerImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="250.0" spacing="10.0">
               <children>
                  <Text fill="#494949" strokeType="OUTSIDE" strokeWidth="0.0" text="Receiver">
                     <font>
                        <Font size="31.0" />
                     </font></Text>
                  <ComboBox fx:id="receiverComboBox" prefWidth="150.0" />
                  <ImageView fx:id="receiverImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="startButton" mnemonicParsing="false" text="Start simulation" textFill="#494949">
                     <font>
                        <Font size="19.0" />
                     </font></Button>
               </children>
            </HBox>
         </children>
      </VBox>
  </children>
</VBox>
